<div class="form-align">
    <form class="form-box" action="/user/login" method="POST">
        <h1>Login</h1>
        <%- include ('./layout/partials/error_msg') %>
        <label class="pure-material-textfield-outlined">
           <input placeholder=" " type="email" id="email" name="email" required>
            <span>Email</span>
        </label>
        <label class="pure-material-textfield-outlined">
          <input placeholder=" " type="password" id="password" name="password" required>
          <span>Password</span>
          <span toggle="#password" class="far fa-eye field-icon toggle-password"></span>
        </label>
        <div class="form-button">
          <a class="btn btn-primary" href="/user/register" style="text-decoration: none;">Create an Account</a>
          <button class="btn btn-primary-contained" type="submit">Login</button>
        </div>
    </form>
</div>  