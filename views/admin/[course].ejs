<div class="previous-page-link">
    <a href="/admin">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
      </svg>
    </a>
    <span class="heading">Course : <%= course %></span>
</div>

<section>
       <div class="md-ui component-data-table">
        <div class="main-table-wrapper">
        <table class="main-table-content">
            <thead class="data-table-header">
            <tr class="data-table-row">
                <td class="table-datacell datatype-string">Name</td>
                <td class="table-datacell datatype-numeric" style="text-align: center;">Role</td>
                <td class="table-datacell datatype-numeric">Actions</td>
            </tr>
            </thead>
            <tbody class="data-table-content">
            <% faculties.forEach(faculty => { %>
            <tr class="data-table-row">
                <td class="table-datacell datatype-string"><%= faculty.name %></td>
                <td class="table-datacell datatype-numeric" style="text-align: center;">Teacher</td>
                <td class="table-datacell datatype-numeric">
                    <% if(faculty.isApproved == "no") { %>
                        <button class="btn btn-primary btn-danger btn-action"
                        formaction="/admin/<%= faculty.course %>/<%= faculty.id %>?_method=DELETE" 
                        formmethod="POST">
                        Disapprove
                       </button>
                       <button class="btn btn-primary btn-action" type="submit" 
                        formaction="/admin/<%= faculty.course %>/<%= faculty.id %>?_method=PUT" 
                        formmethod="POST">
                            Approve
                       </button>
                    <% } else { %>
                    <button class="btn btn-primary btn-action" type="button">View</button>
                    <% } %>
                </td>
            </tr>
            <% }) %>
            <% students.forEach(student => { %>
                <tr class="data-table-row">
                    <td class="table-datacell datatype-string"><%= student.name %></td>
                    <td class="table-datacell datatype-numeric" style="text-align: center;">Student</td>
                    <td class="table-datacell datatype-numeric">
                        <% if(student.isApproved == "no") { %>
                            <form>
                            <button class="btn btn-primary btn-danger btn-action"
                             formaction="/admin/<%= student.course %>/<%= student.id %>?_method=DELETE" 
                             formmethod="POST">
                             Disapprove
                            </button>
                            <button class="btn btn-primary btn-action" type="submit" 
                             formaction="/admin/<%= student.course %>/<%= student.id %>?_method=PUT" 
                             formmethod="POST">
                                 Approve
                            </button>
                            </form>
                            <% } else { %>
                            <button class="btn btn-primary btn-action" type="button">View</button>
                        <% } %>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
        </div>
    </div>
</section>