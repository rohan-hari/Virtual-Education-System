<div class="md-ui component-data-table">
    <div class="main-table-wrapper">
      <table class="main-table-content">
        <thead class="data-table-header">
          <tr class="data-table-row">
            <td class="table-datacell datatype-string">Topic</td>
            <td class="table-datacell datatype-numeric" style="padding-right: 60px;">Actions</td>
          </tr>
        </thead>
        <% if(notes.length > 0){ %> <% notes.forEach(note => { %>
        <tbody class="data-table-content">
          <tr class="data-table-row">
            <td class="table-datacell datatype-string"><%= note.title %></td>
            <td class="table-datacell datatype-numeric">
              <button class="btn btn-primary btn-action" onclick="window.location.href='/teacher/notes/<%= note.id %>'" >View</button>
              <button class="btn btn-primary btn-action" onclick="window.location.href='/teacher/notes/edit/<%= note.id %>'">Edit</button>
            </td>
          </tr>
       <% }) %> <% } else {%>
          <tr class="data-table-row">
            <td class="table-datacell datatype-string">No notes added</td>
            <td class="table-datacell datatype-numeric"></td>
          </tr>
        <% } %>
        <tr class="data-table-row-last">
          <td class="table-datacell datatype-string"></td>
          <td class="table-datacell datatype-numeric">
            <button class="btn btn-primary btn-action" onclick="window.location.href='/teacher/notes/create-note'">Create New</button>
          </td>
        </tr>
        </tbody>
      </table>
    </div>
</div>
  